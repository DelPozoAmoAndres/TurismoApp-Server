{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es5",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./src/",
      "paths": {
        "@controllers/*": ["controllers/*"],
        "@services/*": ["services/*"],
        "@customTypes/*": ["customTypes/*"],
        "@models/*": ["models/*"],
        "@utils/*": ["utils/*"],
        "@routes/*": ["routes/*"],
        "@app": ["app"],
    }
    },
    "include": ["src/**/*", "__test__/**/*"],
    "exclude": ["node_modules"]
  }
  